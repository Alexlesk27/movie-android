<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title_porvir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/recicyclerFilmesPopulares"
        android:text="Filmes por vir"
        tools:ignore="HardcodedText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recicyclerFilmesPorvir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_porvir"
        tools:listitem="@layout/item_movie" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recicyclerFilmesPopulares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        tools:listitem="@layout/item_movie" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filmes populares"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />


</RelativeLayout>

